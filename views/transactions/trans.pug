extends ../layout/common.pug

block content
  h1 Danh sách thuê
  
  if errors
    each error in errors
      .alert.alert-danger= error
  else
    table.table
      tr
        th userID
        th bookID
        th Trả sách
      each tran in trans
        if !tran.isComplete
          tr
            td= tran.userID
            td= tran.bookID
            td
              span
              a.btn.btn-primary(href="/transactions/" + tran.id + "/complete") Hoàn thành
